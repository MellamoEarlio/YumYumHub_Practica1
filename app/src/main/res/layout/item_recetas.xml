<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/ivreceta"
    android:layout_width="110dp"
    android:layout_height="110dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
        android:id="@+id/tvrecetaNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivreceta"
        />
    <TextView
        android:id="@+id/tvrecetaAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvrecetaNombre"
        app:layout_constraintStart_toEndOf="@id/ivreceta"
        />
    <TextView
        android:id="@+id/tvrecetaTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvrecetaAutor"
        app:layout_constraintStart_toEndOf="@id/ivreceta"
        />
    <TextView
        android:id="@+id/tvrecetaDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvrecetaTiempo"
        app:layout_constraintStart_toEndOf="@id/ivreceta"
        />
    <TextView
        android:id="@+id/tvrecetaIngredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvrecetaDescripcion"
        app:layout_constraintStart_toEndOf="@id/ivreceta"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
